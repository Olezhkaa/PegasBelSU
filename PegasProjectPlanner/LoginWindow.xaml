<Window x:Class="PegasProjectPlanner.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PegasProjectPlanner"
        mc:Ignorable="d"
        Title="LogInYourAccount" Height="550" Width="100" MinHeight="550" MinWidth="1000"
        Background="#F2F3F7">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 0, 0, 50">
        <Image Source="Resources\login_image_belsu.png" VerticalAlignment="Center" HorizontalAlignment="Center" Width="250" Stretch="Fill" Margin="0, 0, 0 25" />
        <StackPanel Background="White" MinWidth="400" MinHeight="150" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Margin="30, 25, 30 ,0" FontSize="14">Логин</TextBlock>
            <TextBox Name="LoginTextBox" Margin="30, 5, 30 ,0" FontSize="18" MinHeight="30"/>
            <TextBlock Margin="30, 15, 30 ,0" FontSize="14">Пароль</TextBlock>
            <PasswordBox Name ="PasswordBox" Margin="30, 5, 30 ,0" FontSize="18" MinHeight="30"/>
            <Button Name="logInButton" Content="Войти" Background="Green" Foreground="White" Margin="30, 20, 30 ,35" Click="logInButton_Click" FontSize="18" Padding="2" FontWeight="Bold"/>

        </StackPanel>
    </StackPanel>
</Window>
